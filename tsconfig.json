{
  "compilerOptions": {
      "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
      "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
      "jsx": "preserve",
      "lib": ["es2015", "DOM"],
      "module": "es2022",
      "types": ["vite/client"],
      "moduleResolution": "node"
  },
  "include": [
      "./**/*.*",
      "./shims-vue.d.ts",
  ],
  "exclude": [
      "node_modules"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true"
}